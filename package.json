{
    "name": "auto-comment-blocks",
    "displayName": "Auto Comment Blocks",
    "description": "A simple extension for C, C++, C#, CSS/Sass, PHP, Java, and Groovy that ports VS Code's JavaScript block comment completion functionality.",
    "version": "0.2.2",
    "publisher": "kevinkyang",
    "homepage": "https://github.com/kevinkyang/auto-comment-blocks",
    "repository": {
        "type": "git",
        "url": "https://github.com/kevinkyang/auto-comment-blocks.git"
    },
    "license": "SEE LICENSE IN LICENSE",
    "icon": "img/icon.png",
    "galleryBanner": {
        "color": "#171A29",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.12.0"
    },
    "keywords": [
        "auto",
        "comment",
        "block",
        "asterisk"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:c",
        "onLanguage:cpp",
        "onLanguage:csharp",
        "onLanguage:css",
        "onLanguage:java",
        "onLanguage:scss",
        "onLanguage:groovy",
        "onLanguage:php"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "title": "Auto Comment Blocks",
            "properties": {
                "auto-comment-blocks.languages": {
                    "type": "array",
                    "default": [
                        "c",
                        "cpp",
                        "csharp",
                        "css",
                        "java",
                        "scss",
                        "groovy",
                        "php"
                    ],
                    "description": "Comment completion will be enabled for the lanuages in this list. Currently supported languages: C (c), C++ (cpp), C# (csharp), CSS (css), Sass (scss), Java (java), and Groovy (groovy)."
                }
            }
        },
        "languages": [
            {
                "id": "c",
                "configuration": "./language-configuration/language-configuration.c.json"
            },
            {
                "id": "cpp",
                "configuration": "./language-configuration/language-configuration.cpp.json"
            },
            {
                "id": "css",
                "configuration": "./language-configuration/language-configuration.css.json"
            },
            {
                "id": "scss",
                "configuration": "./language-configuration/language-configuration.scss.json"
            },
            {
                "id": "groovy",
                "configuration": "./language-configuration/language-configuration.groovy.json"
            },
            {
                "id": "php",
                "configuration": "./language-configuration/language-configuration.php.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}